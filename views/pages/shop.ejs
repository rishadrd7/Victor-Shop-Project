<%- include('../layouts/header')  %>
<%- include('../layouts/header2')  %>


<style>

    .shop-bar{
        width: 100%;
        height: 85px;
        background-color: #333333;
    }.title{
        text-align: center;
        margin-top: 20px;
        font-weight: bold;
    }
    /* .row{
        display: flex;
        align-items: center;
        justify-content: baseline;
    } */
    .dropbtn {
        background-color: #d4d0d0;
        color: rgb(0, 0, 0);
        font-size: 16px;
        border: none;
        cursor: pointer;
  
    }

        /* The container <div> - needed to position the dropdown content */
        .drop {
        position: relative;
        display: inline-block;

        }

        /* Drop Content (Hidden by Default) */
        .drop-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        }

        /* Links inside the drop */
        .drop-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        }

        /* Change color of drop links on hover */
        .drop-content a:hover {background-color: #ccc5c5}

        /* Show the drop menu on hover */
        .drop:hover .drop-content {
        display: block;
        }

        /* Change the background color of the drop button when the drop content is shown */
        .drop:hover .dropbtn {
        background-color: #908e8e;
        }
        .pop{
            margin-bottom: 20px;
        }

</style>



   
      <div class="shop-bar"></div>
                       
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

            <div class="drop">
                <br>
                <button class="dropbtn">Category</button>
                <div class="drop-content">
                  <a href="#">Mens</a>
                  <a href="#">Womens</a>
                  <a href="#">Kids</a>
                </div>
              </div>

            <div class="drop">
                <br>
                <button class="dropbtn">Sort</button>
                <div class="drop-content">
                  <a href="#">A-Z</a>
                  <a href="#">Z-A</a>
                </div>
              </div>

            <div class="drop">
                <br>
                <button class="dropbtn">Price</button>
                <div class="drop-content">
                  <a href="#">Low to High</a>
                  <a href="#">High to Low</a>
                </div>
              </div>
              
              
              
              <h2 class="title">All Catagory</h2>
              <button class="pop">Popularity</button>
                <div class="products-container mb-7">

                    <div class="row justify-content-center">

                     
                    <% locals.product.forEach(element => { %>
                        
                
                        <div class="col-6 col-md-4" >
                            <div class="product product-4">
                                <figure class="product-media">

                                    <!-- passing query  -->
                                    <a href="/productDetails?id=<%= element._id %>">
                                        <img src="/uploads/<%= element.image[0] %>" alt="Product image" class="product-image1">
                                        <img src="/uploads/<%= element.image[1] %>" alt="Product image" class="product-image-hover">
                                    </a>

                                    <div class="product-action-vertical">
                                        <a href="#" class="btn-product-icon btn-wishlist btn-expandable"><span>add to wishlist</span></a>
                                    </div>

                                    <div class="product-action" style="z-index: 0;">
                                        <a href="#" class="btn-product btn-cart"><span>add to cart</span></a>
                                    </div>
                                </figure>

                                <div class="product-body">
                                    <!-- <div class="product-cat">
                                        <a href="#">Clothing</a>
                                    </div> -->
                                    <%= element.category?.name   %>
                                    <h3 class="product-title"><a href="product.html"><%= element.name %></a></h3>
                                    <div class="product-price" >
                                        ₹<%= element.offerPrice %>
                                        <!-- ₹<%= element.price %> -->
                                        
                                    </div>
                                    <!-- <div class="product-nav product-nav-dots">
                                        <a href="#" class="active" style="background: #e5dcb1;"><span class="sr-only">Color name</span></a>
                                        <a href="#" style="background: #bacbd8;"><span class="sr-only">Color name</span></a>
                                    </div> -->
                                </div>
                            </div>
                        </div>

                  <%  }); %>
                       
                        


                    </div>

                  
                </div>
            </div>

          
        </div><!-- End .row -->

      
    </div><!-- End .container -->





    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchForm = document.getElementById('searchForm');
            searchForm.addEventListener('submit', function (event) {
                event.preventDefault();
                const query = document.getElementById('q').value.trim();
                if (query !== '') {
                    window.location.href = `${searchForm.getAttribute('action')}?q=${encodeURIComponent(query)}`;
                }
            });
        });
    </script>


