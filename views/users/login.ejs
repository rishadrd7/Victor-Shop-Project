    <div
      class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
      style="
        background-image: url('user/assets/images/new/bg-img4.png');
      "
    >
      <div class="container">
        <div class="form-box">
          <div class="form-tab">

            <ul class="nav nav-pills nav-fill" role="tablist">
              <!-- <li class="nav-item">
                <a
                  class="nav-link"
