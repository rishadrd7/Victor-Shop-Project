              <li class="nav-item">
                <a
                  class="nav-link active"
                  id="register-tab-2"
                  data-toggle="tab"
                  
                  role="tab"
                  aria-controls="register-2"
                  aria-selected="true"
                  >Login</a
                >
              </li>
            </ul>


            <div class="tab-content">

              <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                <% if (typeof message !== "undefined") { %>
                <h6 style="color: black; " class="text-center"><%= message %></h6>
                <% } %>
            
                <form method="post" action="/login">
                    <div class="form-group">
                        <label for="register-email-2">Your email address *</label>
                        <input type="email" class="form-control" id="register-email-2" name="email" required />
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>
                    <!-- End .form-group -->
            
                    <div class="form-group">
                        <label for="register-password-2">Password *</label>
                        <input type="password" class="form-control" name="password" />
                        <!-- <div class="invalid-feedback">Password must be at least 8 characters long.</div> -->
                    </div>
                    <!-- End .form-group -->
            
                    <div class="form-footer">
                        <a href="">
                            <button type="submit" class="btn btn-outline-primary-2" style="margin-left: 130%;" value="login">
                                <span>SIGN UP</span>
                                <i class="icon-long-arrow-right"></i>
                            </button>
                        </a>
                    </div>
                    <!-- End .form-footer -->
                </form>
            
                <!-- Google and Facebook login options -->
                <div class="form-choice">
                    <p class="text-center">or sign in with</p>
                    <div class="row">
                        <div class="col-sm-6">
                            <a href="/login/google" class="btn btn-login btn-g">
                                <i class="icon-google"></i>
                                Login With Google
                            </a>
                        </div>
                        <!-- End .col-6 -->
                        <div class="col-sm-6">
                            <a href="/login/facebook" class="btn btn-login btn-f">
                                <i class="icon-facebook-f"></i>
                                Login With Facebook
                            </a>
                        </div>
                        <!-- End .col-6 -->
                    </div>
                    <!-- End .row -->
                    <h4 class="text-last">Don't have an account? <a href="registration"> SignUp</a></h4>
                    <a class="forgot-passUser" href="/forgotpass">Forgot Password?</a>
                </div>
                <!-- End .form-choice -->
            </div>
            
              <!-- .End .tab-pane -->
            </div>
            <!-- End .tab-content -->
          </div>
          <!-- End .form-tab -->
        </div>
        <!-- End .form-box -->
