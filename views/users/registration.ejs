<script>
  // Function to validate full name
  function validateName() {
      var nameInput = document.getElementById("register-name-2");
      var nameError = document.getElementById("name-error");

      // Check if the name field contains at least one non-space character
      if (!/\S/.test(nameInput.value)) {
          nameError.textContent = "Please enter your full name.";
          nameInput.classList.add("is-invalid"); // Add Bootstrap's is-invalid class for styling
          return false;
      } else {
          nameError.textContent = "";
          nameInput.classList.remove("is-invalid");
          return true;
      }
  }

  // Event listener to validate full name on input change
  document.getElementById("register-name-2").addEventListener("input", validateName);



  // Function to validate password
  function validatePassword() {
      var passwordInput = document.getElementById("register-password-2");
      var passwordError = document.getElementById("password-error");

      // Check if the password field contains at least one non-space character
      if (!/\S/.test(passwordInput.value)) {
          passwordError.textContent = "Please enter a password.";
          passwordInput.classList.add("is-invalid"); // Add Bootstrap's is-invalid class for styling
          return false;
      } else {
          passwordError.textContent = "";
          passwordInput.classList.remove("is-invalid");
          return true;
      }
  }

  // Event listener to validate password on input change
  document.getElementById("register-password-2").addEventListener("input", validatePassword);
</script>







