        <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
            style="background-image: url('user/assets/images/new/bg-img4.png')">
            <div class="container">
                <div class="form-box">
                    <div class="form-tab">
                        <ul class="nav nav-pills nav-fill" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="otp-verification" data-toggle="tab" role="tab"
                                    aria-controls="register-2" aria-selected="true">OTP Verification</a>
                            </li>
                        </ul>
                        <br />
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="signin-2" role="tabpanel"
                                aria-labelledby="signin-tab-2">
                                <div class="container-2">
                                    <!-- <header>
                                        <i class="bx bxs-check-shield"></i>
                                    </header> -->
                                    <h4>Enter OTP Code</h4>
                                    <form action="/home " method="POST">

                                        <span class="text-danger text-center"><%= otpMsg %></span>

                                        <div class="input-field">
                                            <input name="digit1" type="" required maxlength="1" class="otp-input" />
                                            <input name="digit2" type="" required maxlength="1" class="otp-input" />
                                            <input name="digit3" type="" required maxlength="1" class="otp-input" />
                                            <input name="digit4" type="" required maxlength="1" class="otp-input" />
                                            <input name="digit5" type="" required maxlength="1" class="otp-input" />
                                            <input name="digit6" type="" required maxlength="1" class="otp-input" />


                                            

                                        </div>
                                        <input type="text" name="id" hidden value="<%= locals.id %>"/>
                                         <button type="submit" class="verify-button hidden" id="verifyOtpButton">Verify OTP</button>


                                         <div id="timer">Time remaining: 1:00</div>
                                         <span id="timer" style="margin-bottom: 10px; font-size: 1.25rem"></span>
                                
                                         <button class="btn btn-outline-primary-2" type="submit">
                                            <a href="/resendotp?id=<%= locals.id %>" class="resend-link hidden " onclick="alertss()">Resend OTP</a>
                                         </button>
                                            
                                        </form>
                                    
                                    
                                    
                                </div>
                            </div>
                            <!-- .End .tab-pane -->
                        </div>
                        <!-- End .tab-content -->
                    </div>
                    <!-- End .form-tab -->
                </div>
                <!-- End .form-box -->
            </div>
            <!-- End .container -->
        </div>
        <!-- End .login-page section-bg -->
    </main>
    <!-- End .main -->



    
    

<script>

const timerDuration = 60;

function startTimer() {
    let timeLeft = timerDuration;
    const timerElement = document.getElementById("timer");

    // Update the timer every second
    const countdown = setInterval(() => {
        // Display the remaining time in the timer element
        timerElement.textContent = `Resend OTP in ${timeLeft} seconds`;

        // Decrease timeLeft by 1 second
        timeLeft--;

        // If the timer reaches 0, stop the countdown and enable the Resend OTP button
        if (timeLeft < 0) {
            clearInterval(countdown);
            document.getElementById("resend-link").classList.remove("hidden");
            timerElement.textContent = "Resend OTP";
        }
    }, 1000);
}

// Start the timer when the page loads
startTimer();



//otp forward and backward
document.addEventListener('DOMContentLoaded', function() {
    const otpInputs = document.querySelectorAll('.otp-input');
    
    otpInputs.forEach(function(input, index) {
        input.addEventListener('input', function(event) {
            const value = event.target.value;
            
            if (value.length === 1) {
                if (index < otpInputs.length - 1) {
                    otpInputs[index + 1].focus();
                } else {
                    document.getElementById('verifyOtpButton').click();
                }
            } else if (value.length === 0 && index > 0) {
                otpInputs[index - 1].focus();
            }
        });
        
        input.addEventListener('keydown', function(event) {
            if (event.key === 'Backspace' && index > 0 && input.value.length === 0) {
                otpInputs[index - 1].focus();
            }
        });
    });
});

</script>


