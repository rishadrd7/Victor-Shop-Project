        <div class="col-xl-12 d-flex grid-margin stretch-card">
          <div class="card">
            <div class="card-body ">
              <h3>Sales Profit</h3>
              <select id="graphSelector" class="form-select  btn btn-outline-success" onchange="loadGraph()"
          aria-label="Default select example">
          <!-- <option selected>Open this select menu</option> -->


          <option value="monthly">Monthly</option>
          <option value="yearly">Yearly</option>
        </select>


              <div>
                <canvas id="myChart"></canvas>
              </div>
            </div>
          </div>
        </div>



        <!-- top 10 products -->

        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-dark" style="color: white">
                  <h4 class="card-title">Best Selling Products</h4>
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Name</th>
                      <th>Image</th>
                      <th>Sold</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% topProducts.forEach((product, index)=> { %>
                      <tr>
                        <td>
                          <%= index + 1 %>
                        </td>
                        <td>
                          <%= product.name %>
                        </td>
                        <td><img src="/uploads/<%= product.image[0] %>" alt="image" /></td>
                        <td>
                          <%= product.count %>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <!-- top 10 categories -->

        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-dark" style="color: white">
                  <h4 class="card-title">Best Selling Categories</h4>
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Name</th>
                      <th>Sold</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% topCategories.forEach((category, index)=> { %>
                      <tr>
                        <td>
                          <%= index + 1 %>
                        </td>
                        <td>
                          <%= category.categoryName %>
                        </td>
                        <td>
                          <%= category.count %>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
