<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- add coupon form validation -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
      const couponForm = document.getElementById('couponForm');

      couponForm.addEventListener('submit', (event) => {
          event.preventDefault(); // Prevent the default form submission

          // Validate form fields
          const couponName = couponForm.elements.couponName.value.trim();
          const couponCode = couponForm.elements.couponCode.value.trim();
          const description = couponForm.elements.description.value.trim();
          const discount = couponForm.elements.discount.value.trim();
          const expireDate = couponForm.elements.expireDate.value.trim();

          // Check if discount meets the minimum requirement
          if (!validateDiscount(discount)) {
              return; // Stop further execution if discount is invalid
          }

          if (!couponName || !couponCode || !description || !discount || !expireDate) {
              // Show alert if any field is not valid
              Swal.fire({
                  icon: 'error',
                  title: 'Oops...',
                  text: 'Please fill in all required fields!',
              });
          } else {
              // If all fields are valid, submit the form programmatically
              couponForm.submit();
          }
      });
  });

  // Function to validate the discount value
  function validateDiscount(discount) {
      const minDiscount = 10; // Set your minimum discount value here
      if (discount < minDiscount) {
          Swal.fire({
              icon: 'error',
              title: 'Oops...',
              text: `The discount must be at least ${minDiscount}!`,
          });
          return false; // Return false if the discount is invalid
      }
      return true; // Return true if the discount is valid
  }
</script>


<!-- coupon generate code function -->
<script>
  function generateCouponCode(){
    const characters='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
    let couponCode='';
    for(let i =0;i<10;i++){
      couponCode+=characters.charAt(Math.floor(Math.random()*characters.length))
    }
    const couponCodeInput=document.getElementById('couponCodeInput')
    couponCodeInput.value=couponCode
    console.log(couponCode,'in ejs page');
  }
</script>
