<%- include('../layouts/adminHeader') %>

<div class="main-panel">
  <div class="content-wrapper">


    <div class="page-header">
      <h3 class="page-title">Offers Tables</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <button><li class="breadcrumb-item"><a href="addOffer">Add Offers</a></li></button>
        </ol>
      </nav>
    </div>

            
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark" style="color: white;">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>offer Name</th>
                                <th>Offer(%)</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                        
                           
                          <% offers.forEach((offer,index)=>{ %>
                          <tr>
                            <td class="py-1 dele">
                             <%= index+1 %>
                            </td>
                            <td>
                              <%= offer.title %>
                            </td>
                            <!-- <td><label class="badge badge-warning">In progress</label></td> -->
                            <td><%= offer.discountPercentage %> %</td>
  
                            <td>
                             <%= offer.startDate?.toLocaleDateString('en-US',{year:'numeric',month:'short',day:'2-digit'}) %>
                            </td>
                            <td>
                            <%= offer.expireDate?.toLocaleDateString('en-Us',{year:'numeric',month:'short',day:'2-digit'}) %>
                            </td>
                            
                            <td><Button class="btn btn-success  "><%= offer.status %></Button></td>

                            <td><a href="/admin/offerEdit/<%= offer._id %>" class="btn btn-primary ">Edit</a></td>
                            
                            <td>
                              <button  class="btn btn-danger  delete-offer" onclick="deleteOffer('<%= offer._id %>','<%= index %>')" data-offer-id="<%= offer._id %>">Delete
                               </button>
                            </td>
                          </tr>
                          <% }) %>
                          
                        </tbody>
                    </table>
                    
                </div>  
            </div>
        </div>
    </div>

</div>
</div>

<%- include('../layouts/adminFooter') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
function deleteOffer(offerId, index) {
  // Use SweetAlert to confirm the deletion
  Swal.fire({
      title: 'Are you sure?',
      text: "Delete the Offer!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
  }).then((result) => {
      if (result.isConfirmed) {
          // If confirmed, proceed with the deletion
          // Your deletion logic here, for example:
          fetch(`/admin/deleteOffer/${offerId}`, {
              method: 'DELETE'  
          })
          .then((response) => {
              if (response.ok) {
                  // Remove the row from the table
                  document.getElementById(`row${index}`).remove();
                  window.location.reload()
              }
          });
      }
  });
}
</script>
  