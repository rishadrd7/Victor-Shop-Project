<style>
    /* Form container styles */
    .forgot {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f2f2;
        border-radius: 8px;
    }

    /* Form title styles */
    .forgot h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    /* Form input styles */
    .forgot label {
        font-weight: bold;
    }

    .forgot input[type="email"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .forgot input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .forgot input[type="submit"]:hover {
        background-color: #0056b3;
    }
</style>

<div
class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
style="
  background-image: url('admin/assets/images/new/admin-bg.j');
"
>
<div class="forgot">

<h2>Forgot Password</h2>
<form action="/resetPass" method="post">
    <label for="email">Enter your email address:</label><br>
    <input type="email" id="email" name="email" required><br>
    <input type="submit" value="Submit">
</form>

</div>
</div>




