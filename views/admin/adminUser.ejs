.user-table td {
    padding: 8px;
    border: 1px solid #ddd;
    text-align: left;
}

.user-table th {
    background-color: #f2f2f2;
}

.action-btn {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.block-btn {
    background-color: #ff5733; /* Red color for block button */
    color: white;
}

.unblock-btn {
    background-color: #28a745; /* Green color for unblock button */
    color: white;
}

.action-btn:hover {
    opacity: 0.8; /* Reduce opacity on hover */
}
.block-btn {
    background-color: #ff5733; /* Red color for block button */
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    cursor: pointer;
    transition: background-color 0.3s;
