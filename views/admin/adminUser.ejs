        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Users Tables </h3>
              <!-- <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Tables</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Basic tables</li>
                </ol>
              </nav> -->
            </div>
            <div class="row">


      


              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Users List</h4>
                    
                    <div class="table-responsive">

                      
                      <table class="table table-dark" style="color: white;">
                        <thead>
                          <tr>
                            <th>  No </th>
                            <!-- <th>  ID</th> -->
                            <th>  Name</th>
                            <th>  Email</th>
                            <th>  Phone </th>
                            <th>  Date of Joined </th>
                            <th>  Verified </th>
                            <!-- <th>  Status </th> -->
                            <th class="-td-action" style="text-align: center;" >  Actions </th>
                          </tr>


                          <% if (users.length > 0) { %>
                            <% for(let i=0; i<users.length; i++) { %>

                                <tr>
                                    <td><%= i+1 %></td>
                                    <!-- <td><%= users[i]._id %></td>  -->
                                    <td><%= users[i].name %></td>
                                    <td><%= users[i].email %></td>
                                    <td><%= users[i].mobile %></td>
                                    <td><%= formatDate(users[i].dateJoined) %></td>

                                    <td>
                                        <% if(users[i].is_verified == 0) { %>
                                            <p>Not Verified</p>
                                        <% } else { %>
                                            <p>Verified</p>
                                        <% } %>
                                    </td>

                                    <!-- <td><%= users[i].is_blocked ? 'Blocked' : 'Active' %></td>   -->
                                    
                                   <!-- Block and Unblock Button -->
                                   <td class="user-actions">
                                        <% if (users[i].is_blocked) { %>
                                            <button id="unblock<%= i %>" class="action-btn unblock-btn" onclick="unblockUser('<%= users[i]._id %>','<%=i%>')">
                                                Unblock
                                            </button>
                                        <% } else { %>
                                            <button id="block<%= i %>" class="action-btn block-btn" onclick="blockUser('<%= users[i]._id %>','<%=i%>')">
                                                Block
                                            </button>
                                        <% } %>
                                  </td>
                                            
                              </tr>
                                  
                                  
                                    
                                                            
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="9">User not found</td>
                            </tr>
                        <% } %>
                        
                        
                        </thead>  
                      </table>
                    </div>
                  </div>
                </div>
              </div>
               
             
            </div>
          </div>
          <!-- content-wrapper ends -->


 <script>
          function blockUser(usersId,i) {
            const block = document.getElementById(`block${i}`);
              swal.fire({
                  title: "Are You Sure?",
                  text: "Are You Sure?",
                  icon: "warning",
                  showCancelButton: true,
                  confirmButtonColor: "#3085d6",
                  cancelButtonColor: "#d33",
                  confirmButtonText: "Yes",
                  cancelButtonText: "cancel",
              }).then((result) => {
                  if (result.isConfirmed) {
                    block.innerHTML='Unblock';
                    block.classList.remove('block-btn');
                    block.classList.add('unblock-btn')
                      $.ajax({
                          url: "/admin/adminUser",
                          data: {
                              usersId: usersId,
                          },
                          method: "post",
                          success: (response) => {
                              if (response.remove) {
                                  location.reload();
                                  swal.fire({
                                      title: "Done",
                                      text: "Success",
                                      icon: "success",
                                      timer: 1500,
                                      showConfirmButton: false,
                                  });
                              }
                          },
                          
                      });
                  }
              });
          }


     function unblockUser(usersId,i) {
        const unblock = document.getElementById(`unblock${i}`);

        swal.fire({
            title: "Are You Sure?",
            text: "Are You Sure?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes",
            cancelButtonText: "cancel",
        }).then((result) => {
            if (result.isConfirmed) {
                unblock.innerHTML='block';
                    unblock.classList.remove('unblock-btn');
                    unblock.classList.add('block-btn')
                $.ajax({
                    url: "/admin/adminUser",
                    data: {
                        usersId: usersId,
                    },
                    method: "post",
                    success: (response) => {
                        if (response.unblocked) {
                            location.reload();
                            swal.fire({
                                title: "Done",
                                text: "Success",
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false,
                            });
                        }
                    },
                });
            }
        });
    }
 </script>
      
