              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Users List</h4>
                    
                    <div class="table-responsive">

                      
                      <table class="table table-dark">
                        <thead>
                          <tr>
                            <th>  No </th>
                            <th>  ID</th>
                            <th>  Name</th>
                            <th>  Email</th>
                            <th>  Phone </th>
                            <th>  Date of Joined </th>
                            <th>  Verified </th>
                            <th>  Status </th>
                          </tr>


                          <% if (users.length > 0) { %>
                            <% for(let i=0; i<users.length; i++) { %>

                                <tr>
                                    <td><%= i+1 %></td>
                                    <td><%= users[i]._id %></td>
                                    <td><%= users[i].name %></td>
                                    <td><%= users[i].email %></td>
                                    <td><%= users[i].mobile %></td>
                                    <td><%= users[i].dateJoined %></td>

                                    <td>
                                        <% if(users[i].is_verified == 0) { %>
                                            <p>Not Verified</p>
                                        <% } else { %>
                                            <p>Verified</p>
                                        <% } %>
                                    </td>
                                    <td><%= users[i].is_blocked%></td>
                                    
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="9">User not found</td>
                            </tr>
                        <% } %>
                        
                        
                        </thead>  
                      </table>
                    </div>
                  </div>
                </div>
              </div>




             
                
             
