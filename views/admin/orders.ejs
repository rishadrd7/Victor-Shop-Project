<%- include('../layouts/adminHeader') %>

<div class="main-panel">
  <div class="content-wrapper">


    <div class="page-header">
      <h3 class="page-title">Orders Tables</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="">Orders</a></li>
        </ol>
      </nav>
    </div>


    <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark" style="color: white;">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>OrderId</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>OrderPlacedDate</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach((order, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= order._id %></td>
                                    <td ><%= order.userId.name %></td>
                                    <td><%= order.userId.email %></td>
                                    <td><%= order.orderDate.toString().split(' ').slice(0, 4).join(' ') %></td>
                                    <td><%= order.paymentMethod %></td>
                                    <td><%= order.status %></td>
                                    <td><a href="/admin/details"><button class="btn btn-primary">Show</button></a></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7">No orders found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




  </div>
</div>

<%- include('../layouts/adminFooter') %>
